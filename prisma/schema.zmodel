datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pg_trgm, unaccent, fuzzystrmatch, btree_gin, pg_stat_statements, uuidOssp(map: "uuid-ossp")]
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres", "relationJoins", "postgresqlExtensions"]
}

plugin prisma {
  provider = "@core/prisma"
  output = "./schema.prisma"
  format = true
}

// plugin trpc {
//   provider = "@zenstackhq/trpc" // не нужен скорее всего
//   output = "../src/generated/trpc"
// }

generator zod {
  provider           = "zod-prisma-types"
  output             = "../src/generated/zod"
  useMultipleFiles   = true
  createSharedSchema = true
}

generator jsonSchema {
  provider = "prisma-json-schema-generator"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

