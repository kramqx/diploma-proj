# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON, configs
[*.{json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts (husky hooks)
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
